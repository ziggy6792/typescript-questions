{
  "name": "typescript-node-starter",
  "version": "1.0.0",
  "description": "Typescript Node Starter",
  "main": "./dist/app.js",
  "private": true,
  "scripts": {
    "lint": "npx eslint --fix ./src/**/*.*",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "update": "npx ncu -u && yarn install",
    "build": "npx ttsc --p ./tsconfig.json",
    "start": "node dist/index.js",
    "dev": "yarn nodemon",
    "start:ts:node": "ts-node -r tsconfig-paths/register src/index.ts"
  },
  "author": "Simon Verhoeven",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "eslint": "^8.11.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.5",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^3.14.0",
    "ttypescript": "^1.5.13",
    "typescript": "^4.6.2",
    "typescript-transform-paths": "^2.0.0"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "src/**/*.{json,ts,tsx}": [
      "prettier --write --config .prettierrc"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn typecheck"
    }
  }
}
